<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<TabPane prefHeight="475.0" prefWidth="700.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <tabs>
        <Tab text="Add New Student">
            <content>
                <GridPane>
                    <Label text="First Name">
                        <GridPane.margin>
                            <Insets left="40.0" />
                        </GridPane.margin></Label>
                    <Label text="Email" GridPane.rowIndex="1">
                        <GridPane.margin>
                            <Insets left="40.0" />
                        </GridPane.margin></Label>
                    <Label text="Phone" GridPane.rowIndex="2">
                        <GridPane.margin>
                            <Insets left="40.0" />
                        </GridPane.margin></Label>
                    <TextField fx:id="textFieldFirstName" GridPane.columnIndex="1">
                        <GridPane.margin>
                            <Insets left="20.0" />
                        </GridPane.margin></TextField>
                    <TextField fx:id="textFieldPhone" promptText="+45" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <GridPane.margin>
                            <Insets left="20.0" />
                        </GridPane.margin></TextField>
                    <TextField fx:id="textFieldEmail" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <GridPane.margin>
                            <Insets left="20.0" />
                        </GridPane.margin></TextField>
                    <Button fx:id="buttonAddNewStudent" onAction="#addStudent" text="Add New Student" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                    <Label layoutX="80.0" layoutY="45.0" text="Last Name" GridPane.columnIndex="2">
                        <GridPane.margin>
                            <Insets left="40.0" />
                        </GridPane.margin>
                    </Label>
                    <Label layoutX="80.0" layoutY="45.0" text="City" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <GridPane.margin>
                            <Insets left="40.0" />
                        </GridPane.margin>
                    </Label>
                    <TextField fx:id="textFieldLastName" GridPane.columnIndex="3">
                        <GridPane.margin>
                            <Insets left="20.0" />
                        </GridPane.margin>
                    </TextField>
                    <TextField fx:id="textFieldCity" GridPane.columnIndex="3" GridPane.rowIndex="1">
                        <GridPane.margin>
                            <Insets left="20.0" />
                        </GridPane.margin>
                    </TextField>
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" />
                    </rowConstraints>
                    <padding>
                        <Insets left="30.0" top="30.0" />
                    </padding>
                </GridPane>
            </content>
        </Tab>
        <Tab text="List">
            <content>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <TableView fx:id="tableStudents"  prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <columns>
                                <TableColumn fx:id="tableColumnStudentId" prefWidth="75.0" text="ID" />
                                <TableColumn fx:id="tableColumnFirstName" prefWidth="75.0" text="First Name" />
                                <TableColumn fx:id="tableColumnLastName" prefWidth="75.0" text="Last Name" />
                                <TableColumn fx:id="tableColumnEmail" prefWidth="75.0" text="Email" />
                                <TableColumn fx:id="tableColumnPhone" prefWidth="75.0" text="Phone" />
                                <TableColumn fx:id="tableColumnCity" prefWidth="75.0" text="City" />
                            </columns>
                        </TableView>
                    </center>
                    <top>
                        <ComboBox fx:id="comboBoxList" prefWidth="150.0" promptText="DropDown" BorderPane.alignment="TOP_LEFT">
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <BorderPane.margin>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </BorderPane.margin>
                        </ComboBox>
                    </top>
                </BorderPane>
            </content>
        </Tab>
        <Tab text="Add Student to Course">
            <content>
                <BorderPane>
                    <top>
                        <FlowPane>
                            <Label text="Choose Student:">
                                <FlowPane.margin>
                                    <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
                                </FlowPane.margin></Label>
                            <ComboBox fx:id="comboboxStudentsToCourse">
                                <FlowPane.margin>
                                    <Insets bottom="10.0" right="10.0" top="10.0" />
                                </FlowPane.margin></ComboBox>
                            <Label text="Choose Course:">
                                <FlowPane.margin>
                                    <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
                                </FlowPane.margin></Label>
                            <ComboBox fx:id="comboBoxCourses">
                                <FlowPane.margin>
                                    <Insets bottom="10.0" right="10.0" top="10.0" />
                                </FlowPane.margin></ComboBox>
                            <Button fx:id="buttonStudentToCourse" onAction="#AddStudentToCourse" text="Add Student!">
                                <FlowPane.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </FlowPane.margin></Button>
                        </FlowPane>
                    </top>
                </BorderPane>
            </content>
        </Tab>
        <Tab text="Add Grade to Student">
            <content>
                <BorderPane>
                    <top>
                        <FlowPane>
                            <children>
                                <Label text="Choose Student">
                                    <FlowPane.margin>
                                        <Insets bottom="10.0" left="10.0" top="10.0" />
                                    </FlowPane.margin>
                                </Label>
                                <ComboBox fx:id="comboboxGradeToStudents">
                                    <FlowPane.margin>
                                        <Insets left="5.0" />
                                    </FlowPane.margin>
                                </ComboBox>
                                <Label text="Assign Grade">
                                    <FlowPane.margin>
                                        <Insets bottom="10.0" left="10.0" top="10.0" />
                                    </FlowPane.margin>
                                </Label>
                                <ComboBox fx:id="comboBoxGrades">
                                    <FlowPane.margin>
                                        <Insets left="5.0" />
                                    </FlowPane.margin>
                                </ComboBox>
                                <Button fx:id="buttonAddGradeToStudent" onAction="#AddGradeToStudent" text="Add Grade!">
                                    <FlowPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </FlowPane.margin>
                                </Button>
                            </children>
                        </FlowPane>
                    </top>
                </BorderPane>
            </content>
        </Tab>
        <Tab text="Search">
            <content>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <top>
                        <FlowPane prefHeight="36.0" prefWidth="700.0" BorderPane.alignment="CENTER">
                            <children>
                                <TextField fx:id="DataSearch" promptText="Skriv her">
                                    <FlowPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </FlowPane.margin>
                                </TextField>
                                <Button fx:id="buttonSearchQuery" mnemonicParsing="false" onAction="#searchQuery" text="Let's Go Bruv!">
                                    <FlowPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </FlowPane.margin>
                                </Button>
                            </children>
                        </FlowPane>
                    </top>
                </BorderPane>
            </content>
        </Tab>
    </tabs>
</TabPane>
